<div>

    <div class="tabla_de_estadisticas float_right">
        <table>
            <tbody>
                <tr>
                    <td class="text_align_right font_weight_bold">Notificaciones:</td>
                    <td class="text_align_right">{{ root.interpretacion_de_script.notificaciones.length }}</td>
                </tr>
                <tr>
                    <td class="text_align_right font_weight_bold">Acumulaciones:</td>
                    <td class="text_align_right">{{ Object.keys(root.interpretacion_de_script.acumulaciones).length }}</td>
                </tr>
                <tr>
                    <td class="text_align_right font_weight_bold">Acciones:</td>
                    <td class="text_align_right">{{ root.interpretacion_de_script.acciones.length }}</td>
                </tr>
                <tr>
                    <td class="text_align_right font_weight_bold">Fenómenos:</td>
                    <td class="text_align_right">{{ root.interpretacion_de_script.fenomenos.length }}</td>
                </tr>
                <tr>
                    <td class="text_align_right font_weight_bold">Creencias:</td>
                    <td class="text_align_right">{{ root.interpretacion_de_script.creencias.length }}</td>
                </tr>
                <tr>
                    <td class="text_align_right font_weight_bold">Límites:</td>
                    <td class="text_align_right">{{ root.interpretacion_de_script.limites.length }}</td>
                </tr>
                <tr>
                    <td class="text_align_right font_weight_bold">Sentencias:</td>
                    <td class="text_align_right">{{ root.interpretacion_de_script.sentencias.length }}</td>
                </tr>
            </tbody>
        </table>
    </div>

    <div class="tabla_de_estadisticas float_left">
        <table>
            <tbody>
                <tr>
                    <td><button class="width_100 text_align_left" :class="{active: subseccion_seleccionada === 'buscar notificaciones'}" v-on:click="() => ir_a_subseccion('buscar notificaciones')">Buscar notificaciones</button></td>
                </tr>
                <!--tr>
                    <td><button class="width_100 text_align_left" :class="{active: subseccion_seleccionada === 'buscar cualquiera'}" v-on:click="() => ir_a_subseccion('buscar cualquiera')">Buscar cualquiera</button></td>
                </tr-->
                <tr>
                    <td><button class="width_100 text_align_left" :class="{active: subseccion_seleccionada === 'buscar sentencias'}" v-on:click="() => ir_a_subseccion('buscar sentencias')">Buscar sentencias</button></td>
                </tr>
                <tr>
                    <td><button class="width_100 text_align_left" :class="{active: subseccion_seleccionada === 'buscar acciones'}" v-on:click="() => ir_a_subseccion('buscar acciones')">Buscar acciones</button></td>
                </tr>
                <tr>
                    <td><button class="width_100 text_align_left" :class="{active: subseccion_seleccionada === 'buscar acumulaciones'}" v-on:click="() => ir_a_subseccion('buscar acumulaciones')">Buscar acumulaciones</button></td>
                </tr>
                <tr>
                    <td><button class="width_100 text_align_left" :class="{active: subseccion_seleccionada === 'buscar creencias'}" v-on:click="() => ir_a_subseccion('buscar creencias')">Buscar creencias</button></td>
                </tr>
                <tr>
                    <td><button class="width_100 text_align_left" :class="{active: subseccion_seleccionada === 'buscar límites'}" v-on:click="() => ir_a_subseccion('buscar límites')">Buscar límites</button></td>
                </tr>
                <tr>
                    <td><button class="width_100 text_align_left" :class="{active: subseccion_seleccionada === 'buscar fenómenos'}" v-on:click="() => ir_a_subseccion('buscar fenómenos')">Buscar fenómenos</button></td>
                </tr>
                <tr>
                    <td><button class="width_100 text_align_left" :class="{active: subseccion_seleccionada === 'mostrar datos'}" v-on:click="() => ir_a_subseccion('mostrar datos')">Mostrar datos</button></td>
                </tr>
            </tbody>
        </table>
    </div>

    <hr class="clear_both" />

    <div v-if="subseccion_seleccionada === 'mostrar datos'">
        <mi-textviewer :texto="JSON.stringify(root.interpretacion_de_script, null, 2)" />
    </div>

    <div v-else-if="subseccion_seleccionada === 'buscar cualquiera'">
        <buscador-de-cualquiera :estadisticas="this" />
    </div>

    <div v-else-if="subseccion_seleccionada === 'buscar sentencias'">
        <buscador-de-sentencias :estadisticas="this" />
    </div>

    <div v-else-if="subseccion_seleccionada === 'buscar acciones'">
        <buscador-de-acciones :estadisticas="this" />
    </div>

    <div v-else-if="subseccion_seleccionada === 'buscar acumulaciones'">
        <buscador-de-acumulaciones :estadisticas="this" />
    </div>

    <div v-else-if="subseccion_seleccionada === 'buscar creencias'">
        <buscador-de-creencias :estadisticas="this" />
    </div>

    <div v-else-if="subseccion_seleccionada === 'buscar límites'">
        <buscador-de-limites :estadisticas="this" />
    </div>

    <div v-else-if="subseccion_seleccionada === 'buscar fenómenos'">
        <buscador-de-fenomenos :estadisticas="this" />
    </div>

    <div v-else-if="subseccion_seleccionada === 'buscar notificaciones'">
        <buscador-de-notificaciones :estadisticas="this" />
    </div>

</div>