<div>
    <mi-subtitle>Buscador de creencias</mi-subtitle>
    <table class="width_100 border_collapse_collapse">
        <tbody>
            <tr>
                <td class="width_100 vertical_align_top">
                    <mi-input-longable :on-change="actualizar_valor_de_filtro" placeholder="Expresión booleana en JavaScript" :on-enter="cargar_creencias" />
                </td>
                <td class="vertical_align_top">
                    <button class="min_width_0" v-on:click="cargar_creencias">!</button>
                </td>
            </tr>
        </tbody>
    </table>
    <template v-if="estado_de_busqueda === 'finalizada'">
        <visualizador-de-datos :inicial="true" :datos="creencias_filtradas" />
    </template>
    <template v-if="estado_de_busqueda === 'buscando'">
        <div>Se está llevando a cabo la búsqueda... Por favor, espere.</div>
    </template>
</div>